{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "preserveConstEnums": true,
        "lib": ["dom"],
        "types": ["node"],
        "outDir": "./dist",
        "noImplicitAny": false,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
      },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
